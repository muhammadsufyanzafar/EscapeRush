<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:background="#0F1220"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="34dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Escape Rush 3D"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtArea"
            android:textColor="#B0C4FF"
            android:layout_marginTop="12dp"
            android:text="Area: Forest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtCoins"
            android:text="Coins: 0"
            android:textColor="#FFEB3B"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnPlay"
            android:layout_marginTop="24dp"
            android:text="Play"
            android:textSize="18sp"
            android:background="@drawable/round_btn_bg"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="180dp"
            android:layout_height="48dp"/>

        <Button android:id="@+id/btnSettings"
            android:layout_marginTop="15dp"
            android:text="Settings"
            android:textSize="18sp"
            android:background="@drawable/round_btn_bg"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="180dp"
            android:layout_height="48dp"/>

        <Button android:id="@+id/btnLeaderboard"
            android:layout_marginTop="15dp"
            android:text="Leaderboard"
            android:textSize="18sp"
            android:background="@drawable/round_btn_bg"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="180dp"
            android:layout_height="48dp"/>

        <Button android:id="@+id/btnAbout"
            android:layout_marginTop="15dp"
            android:text="About Us"
            android:textSize="18sp"
            android:background="@drawable/round_btn_bg"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="180dp"
            android:layout_height="48dp"/>

        <Button android:id="@+id/btnPrivacy"
            android:layout_marginTop="15dp"
            android:text="Privacy Policy"
            android:textSize="18sp"
            android:background="@drawable/round_btn_bg"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="180dp"
            android:layout_height="48dp"/>

        <Button android:id="@+id/btnTerms"
            android:layout_marginTop="15dp"
            android:text="Terms of Use"
            android:textSize="18sp"
            android:background="@drawable/round_btn_bg"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="180dp"
            android:layout_height="48dp"/>

        <Button android:id="@+id/btnExit"
            android:layout_marginTop="24dp"
            android:text="Exit"
            android:textSize="18sp"
            android:background="@drawable/round_btn_bg"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="180dp"
            android:layout_height="48dp"/>
    </LinearLayout>
</ScrollView>